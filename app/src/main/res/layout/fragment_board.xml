<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <TextView
        android:id="@+id/btv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="후기게시판"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="43dp"
        />
    <ImageButton
        android:id="@+id/btv_mypage"
        android:layout_width="21dp"
        android:layout_height="22.09dp"
        android:padding="0dp"
        android:src="@drawable/mypage_icon"
        app:layout_constraintRight_toRightOf="@id/btv_text"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginTop="48dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/btv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장구벌레"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btv_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/btv_nickname_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님, 다른 사람을 위해"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@id/btv_nickname"
        app:layout_constraintTop_toBottomOf="@id/btv_text"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/btv_nickname_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기를 작성해보는건 어떤가요?"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btv_nickname_text_1"
        android:layout_marginLeft="15dp"

        />
    <TextView
        android:id="@+id/btv_how_to_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 작성한 글은 꾹 눌러서 삭제할 수 있어요"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btv_nickname_text_2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        />
    <CheckBox
        android:id="@+id/btv_cb"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:button="@null"
        android:background="@drawable/checkbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btv_how_to_delete"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 쓴 글"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/btv_cb"
        app:layout_constraintTop_toBottomOf="@id/btv_how_to_delete"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        />

    <ImageButton
        android:id="@+id/btv_write"
        android:layout_width="21dp"
        android:layout_height="22.09dp"
        android:padding="0dp"
        android:src="@drawable/board_write_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btv_how_to_delete"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rc_board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btv_cb">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingTop="6dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_board_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingHorizontal="8dp"
                android:paddingBottom="90dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_board" />

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>