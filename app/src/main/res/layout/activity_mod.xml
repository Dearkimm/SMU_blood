<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textSize="19dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="43dp"
        />
    <TextView
        android:id="@+id/mtv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mod"
        android:text="아이디"
        android:textSize="13dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/met_id"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="#ececec"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/mtv_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/mtv_nid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디는 수정이 불가능합니다."
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/met_id"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:id="@+id/mtv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtv_nid"
        android:text="기존 비밀번호"
        android:textSize="13dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/met_pwd"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:text="기존 비밀번호를 입력해주세요"
        android:textColor="#7c7c7c"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/mtv_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/mtv_pwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/met_pwd"
        android:text="변경 비밀번호"
        android:textSize="13dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/met_pwd2"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:text="변경하실 비밀번호를 입력해주세요"
        android:textColor="#7c7c7c"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/mtv_pwd2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/mtv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/met_pwd2"
        android:text="닉네임"
        android:textSize="13dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/met_name"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:text="변경하실 닉네임을 입력해주세요"
        android:textColor="#7c7c7c"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/mtv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/btn_mod2"
        android:layout_width="107dp"
        android:layout_height="34dp"
        android:background="@drawable/bg_btn_red_5dp"
        android:text="수정하기"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintTop_toBottomOf="@id/met_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>