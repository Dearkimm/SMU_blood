<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지정 헌혈 요청"
        android:fontFamily="@font/notosans_regular"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        />

    <TextView
        android:id="@+id/atv_type"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:text="Rh- AB"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:background="@drawable/bg_btn_grey_10dp"
        app:layout_constraintTop_toBottomOf="@id/request"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="헌혈하러 가기"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_red_5dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textSize="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/atv_type"
        />
</androidx.constraintlayout.widget.ConstraintLayout>