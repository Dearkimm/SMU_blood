<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="긴급 지정 헌혈"
        android:textSize="19sp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btv_noti"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bell_ring"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/warm_grey_2"/>

    <ImageButton
        android:id="@+id/btn_my"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="0dp"
        android:src="@drawable/mypage_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 당장 "
        android:textSize="15sp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/title2"
        android:text="긴급 헌혈"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintTop_toTopOf="@id/title1"
        app:layout_constraintBottom_toBottomOf="@id/title1"
        app:layout_constraintLeft_toRightOf="@id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title3"
        android:text="이"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintBottom_toBottomOf="@id/title2"
        app:layout_constraintTop_toTopOf="@id/title2"
        app:layout_constraintLeft_toRightOf="@id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title4"
        android:text="필요하신가요?"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:textSize="15sp"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintTop_toBottomOf="@id/title1"
        app:layout_constraintLeft_toLeftOf="@id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지정 헌혈 요청하러 가기"
        android:textSize="15sp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="7dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingVertical="9dp"
        android:paddingHorizontal="15dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_join"
        app:layout_constraintTop_toBottomOf="@id/title4"
        app:layout_constraintLeft_toLeftOf="@id/title4"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/btn_request"
        app:layout_constraintLeft_toLeftOf="@id/btn_request"
        android:layout_marginTop="27dp"
        android:text="지정 헌혈 요청"/>
    <ImageButton
        android:id="@+id/main_sort"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:src="@drawable/ic_sort"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/sub_title"
        app:layout_constraintTop_toTopOf="@id/sub_title"
        app:layout_constraintBottom_toBottomOf="@id/sub_title"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_light"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="내 혈액형만"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/sub_title"
        app:layout_constraintBottom_toBottomOf="@id/sub_title"
        app:layout_constraintRight_toLeftOf="@id/main_switch"/>

    <Switch
        android:id="@+id/main_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sub_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="25dp"
        android:track="@drawable/switch_track_selector"
        android:thumb="@drawable/switch_thumb"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rc_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingTop="6dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_request_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingHorizontal="8dp"
                android:paddingBottom="90dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_card_request" />

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>