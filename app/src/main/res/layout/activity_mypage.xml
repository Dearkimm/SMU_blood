<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="19dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        />
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_page"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/btn_mod1"
        android:layout_width="70dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_1"
        android:text="수정하기"
        android:textSize="13dp"
        android:textColor="@color/red"
        android:background="@drawable/bg_btn_mod1"
        android:layout_marginLeft="218dp"
        app:layout_constraintTop_toBottomOf="@id/tv_page"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 : "
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 : "
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 혈액형 : "
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/btn_quest"
        android:layout_width="250dp"
        android:layout_height="43dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        android:text="전자문진하러 가기"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_regular"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_red_5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="헌혈 기록 카드 확인하기"
        android:textSize="15dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_quest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용약관"
        android:textSize="15dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_q"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 처리방침"
        android:textSize="15dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_w"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃하기"
        android:textSize="15dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_e"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴하기"
        android:textSize="15dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_r"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>