<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/bling"
        android:layout_width="75.96dp"
        android:layout_height="75.09dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="130dp"
        />
    <TextView
        android:id="@+id/tv_bling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLING"
        android:fontFamily="@font/notosans_medium"
        android:textColor="@color/red"
        android:gravity="center"
        android:textSize="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="2.9dp"
        />
    <TextView
        android:id="@+id/ltv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bling"
        android:layout_marginTop="92dp"
        android:textSize="13dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/let_id"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/ltv_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/ltv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_id"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/let_pwd"
        android:layout_width="330dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/ltv_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>
    <Button
        android:id="@+id/btn_log"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_pwd"
        android:background="@drawable/bg_btn_login"
        android:layout_marginTop="59dp"/>
    <TextView
        android:id="@+id/ltv_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입하기"
        android:textSize="13dp"
        android:textColor="@color/red"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_log"
        android:layout_marginTop="24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>