<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75.96dp"
        android:layout_height="75.09dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:src="@drawable/bling"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.9dp"
        android:fontFamily="@font/notosans_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/blring_tv"
        android:textColor="@color/red"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />
    <TextView
        android:id="@+id/ltv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_id"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bling"
        android:layout_marginTop="92dp"
        android:textSize="13sp"
        android:layout_marginStart="18dp"
        />

    <EditText
        android:id="@+id/let_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/notosans_light"
        android:paddingStart="10dp"
        android:includeFontPadding="false"
        android:background="@drawable/bg_edittext_color_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ltv_id" />
    <TextView
        android:id="@+id/id_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="@color/red"
        android:layout_marginStart="16dp"
        android:text="@string/ltv_id_type"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/ltv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_bling"
        android:layout_marginTop="94dp"
        />
    <TextView
        android:id="@+id/ltv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_pwd"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_id"
        android:layout_marginTop="17dp"
        android:layout_marginStart="18dp"
        />

    <EditText
        android:id="@+id/let_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:background="@drawable/bg_edittext_color_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ltv_pwd" />

    <CheckBox
        android:id="@+id/ltv_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:button="@drawable/checkbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_pwd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_login_ing"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_pwd"
        />

    <Button
        android:id="@+id/btn_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_btn_login"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="@string/login_tv1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_pwd" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_log"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/btn_Sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv2"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:fontFamily="@font/notosans_regular"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_log"
        android:layout_marginTop="75dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>