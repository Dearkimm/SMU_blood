<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_apply"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_info"
                android:elevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="@string/rcard_tv4"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="#707070"
                    app:layout_constraintTop_toBottomOf="@id/tv_info" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_2"
                    tools:text="신청자 총 3명" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="19dp"
                    android:fontFamily="@font/notosans_light"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_total"
                    tools:text="신청 일시 : 2021.10.02 17:55" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_mine"
                android:layout_width="330dp"
                android:elevation="3dp"
                android:layout_height="218dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_apply"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_card_info"
                >

                <TextView
                    android:id="@+id/tv_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="@string/rcard_tv5"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"
                    />
                <View
                    android:id="@+id/view_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#707070"
                    app:layout_constraintTop_toBottomOf="@id/tv_mine"
                    android:layout_marginTop="14dp"
                    />
                <TextView
                    android:id="@+id/tv_up_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="글 등록 일자"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/notosans_light"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/view_3"
                    android:layout_marginTop="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:id="@+id/tv_up_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rh+ A 전혈"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/notosans_light"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_up_date"
                    android:layout_marginTop="9dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:id="@+id/tv_up_hos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="연세사랑병원 517호 김숙명 (A02441)"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/notosans_light"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_up_type"
                    android:layout_marginTop="9dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:id="@+id/tv_up_pnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="보호자 연락처 : 010-1234-5678"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/notosans_light"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_up_hos"
                    android:layout_marginTop="9dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    />
                <TextView
                    android:id="@+id/tv_up_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="요청 시작 2021.10.01 ~ 요청 마감 2021.10.20"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/notosans_light"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_up_pnum"
                    android:layout_marginTop="9dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>