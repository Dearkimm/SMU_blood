<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지정 헌혈 기록 카드"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tag"
        android:layout_width="222dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctv"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/rec_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:textColor="@color/red"
            android:text="요청 기록"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rec_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:text="신청 기록"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_1"
            android:layout_width="0.1dp"
            android:layout_height="16dp"
            android:layout_marginLeft="34dp"
            android:background="#707070"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rec_request"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_apply"
        android:layout_width="330dp"
        android:elevation="3dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_card_info"
        >

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="헌혈 신청자 정보"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            />
        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            app:layout_constraintTop_toBottomOf="@id/tv_info"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청자 총 3명"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청 일시 : 2021.10.02 17:55"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_total"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="19dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_mine"
        android:layout_width="330dp"
        android:elevation="3dp"
        android:layout_height="218dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_apply"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_card_info"
        >

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="나의 요청 정보"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            />
        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            app:layout_constraintTop_toBottomOf="@id/tv_mine"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:id="@+id/tv_up_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글 등록 일자\nRh+ A 전혈\n연세사랑병원 517호
            \n보호자 연락처\n요청 시작"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/view_3"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>