<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scorll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="276dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv1"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mtv2_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv2"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/request" />

            <Button
                android:id="@+id/type2_a"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv3"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/type2_b"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mtv2_type" />

            <Button
                android:id="@+id/type2_b"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv4"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/type2_o"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/type2_a"
                app:layout_constraintTop_toBottomOf="@id/mtv2_type" />

            <Button
                android:id="@+id/type2_o"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv5"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/type2_ab"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/type2_b"
                app:layout_constraintTop_toBottomOf="@id/mtv2_type" />

            <Button
                android:id="@+id/type2_ab"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv6"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/type2_o"
                app:layout_constraintTop_toBottomOf="@id/mtv2_type" />

            <CheckBox
                android:id="@+id/m_checkbox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/redcheck"
                android:button="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type2_a" />

            <TextView
                android:id="@+id/mcheckbox_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv7"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/m_checkbox"
                app:layout_constraintTop_toBottomOf="@id/type2_a" />


            <TextView
                android:id="@+id/mtv2_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv8"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/m_checkbox" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mtv2_type2">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/redcheck"
                    android:fontFamily="@font/notosans_light"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="  전혈"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mtv2_type2" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/redcheck"
                    android:fontFamily="@font/notosans_light"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="  혈소판"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radio1" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/redcheck"
                    android:fontFamily="@font/notosans_light"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="  백혈구"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radio2" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/redcheck"
                    android:fontFamily="@font/notosans_light"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="  농축적혈구"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radio3" />

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/redcheck"
                    android:fontFamily="@font/notosans_light"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="  백혈구 여과제거 적혈구"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radio4" />
            </RadioGroup>

            <TextView
                android:id="@+id/main_hos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv14"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radiogroup" />

            <Button
                android:id="@+id/imgb_hos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/hospital_search_et"
                android:drawableEnd="@drawable/search_icon"
                android:fontFamily="@font/notosans_light"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:text="병원 찾기"
                android:textColor="#7c7c7c"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_hos" />

            <TextView
                android:id="@+id/main_hnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv15"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgb_hos" />

            <EditText
                android:id="@+id/met_hnum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:hint="@string/rmain_tv16"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_hnum" />

            <TextView
                android:id="@+id/main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv17"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_hnum" />

            <EditText
                android:id="@+id/met_pname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:hint="@string/rmain_tv18"
                android:includeFontPadding="false"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_name" />

            <TextView
                android:id="@+id/main_pnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv19"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_pname" />

            <EditText
                android:id="@+id/met_pnum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:hint="@string/rmain_tv20"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_pnum" />

            <TextView
                android:id="@+id/main_gnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv21"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_pnum" />

            <EditText
                android:id="@+id/met_gnum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:hint="@string/rmain_tv22"
                android:includeFontPadding="false"
                android:inputType="phone"
                android:maxLength="13"
                android:paddingStart="10dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_gnum" />

            <TextView
                android:id="@+id/main_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv23"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_gnum" />

            <EditText
                android:id="@+id/met_start"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:hint="@string/rmain_tv24"
                android:includeFontPadding="false"
                android:inputType="date"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv25"
                android:textColor="@color/red"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/met_start"
                app:layout_constraintLeft_toRightOf="@id/main_start" />

            <TextView
                android:id="@+id/main_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv26"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_start" />

            <EditText
                android:id="@+id/met_end"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:hint="@string/rmain_tv27"
                android:includeFontPadding="false"
                android:inputType="date"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv28"
                android:textColor="@color/red"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/met_end"
                app:layout_constraintLeft_toRightOf="@id/main_end" />

            <TextView
                android:id="@+id/main_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/rmain_tv29"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_end" />

            <EditText
                android:id="@+id/met_story"
                android:layout_width="match_parent"
                android:layout_height="214dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext_color_change"
                android:fontFamily="@font/notosans_light"
                android:gravity="top"
                android:hint="@string/rmain_tv30"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingTop="12dp"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_story" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="82dp"
                android:layout_height="41dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/bg_btn_red_80dp"
                android:fontFamily="@font/notosans_regular"
                android:text="@string/rmain_tv31"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/met_story" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>