<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:paddingHorizontal="0dp"
    android:paddingVertical="0dp">
    <TextView
        android:id="@+id/comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="장구벌레"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="@color/warm_grey_2"
        android:textSize="9sp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp" />
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_nickname"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2021/12/20"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="#BFBFBF"
        android:textSize="8sp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="15dp" />
    <TextView
        android:id="@+id/comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        tools:text="좋은일 하셨네요!"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/comment_edit"
        android:layout_width="25dp"
        android:layout_height="13dp"
        app:layout_constraintEnd_toStartOf="@id/comment_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="5dp"
        android:text="수정"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:fontFamily="@font/notosans_light"
        android:background="@drawable/bg_btn_type"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/comment_delete"
        android:layout_width="25dp"
        android:layout_height="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="15dp"
        android:text="삭제"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:fontFamily="@font/notosans_light"
        android:background="@drawable/bg_btn_type"
        android:visibility="invisible"/>//dfsdfsf
    <View
        android:id="@+id/comment_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/comment_body"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:background="@color/light_grey"
        />
</androidx.constraintlayout.widget.ConstraintLayout>