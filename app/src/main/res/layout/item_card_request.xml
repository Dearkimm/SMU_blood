<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipToPadding="false"
    android:paddingHorizontal="15dp"
    android:paddingVertical="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="11dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/req_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="서울특별시 서초구 강남 연세사랑병" />

            <TextView
                android:id="@+id/req_rh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/req_hospital"
                app:layout_constraintTop_toBottomOf="@id/req_hospital"
                tools:text="Rh+" />

            <TextView
                android:id="@+id/req_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/req_rh"
                app:layout_constraintLeft_toRightOf="@+id/req_rh"
                app:layout_constraintTop_toTopOf="@id/req_rh"
                tools:text="A형 전혈" />

            <TextView
                android:id="@+id/req_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/req_rh"
                app:layout_constraintTop_toBottomOf="@id/req_rh"
                tools:text="5분전" />

            <TextView
                android:id="@+id/req_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/req_blood"
                app:layout_constraintLeft_toRightOf="@id/req_blood"
                app:layout_constraintTop_toTopOf="@id/req_blood"
                tools:text="21.10.01~21.10.15" />

            <TextView
                android:id="@+id/req_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/req_date"
                app:layout_constraintLeft_toRightOf="@id/req_date"
                app:layout_constraintTop_toTopOf="@id/req_date"
                tools:text="3명" />

            <ImageView
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/circle_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/circle_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/circle"
                app:layout_constraintLeft_toLeftOf="@id/circle"
                app:layout_constraintRight_toLeftOf="@id/circle_rh"
                app:layout_constraintTop_toTopOf="@id/circle"
                tools:text="RH A" />

            <TextView
                android:id="@+id/circle_rh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/circle_blood"
                app:layout_constraintLeft_toRightOf="@+id/circle_blood"
                app:layout_constraintTop_toTopOf="@id/circle_blood"
                tools:text="+" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>