<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/stv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="회원가입"
        android:textSize="19dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="43dp"
        />

    <TextView
        android:id="@+id/stv_id"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="32dp"
        android:text="아이디"
        android:textSize="13dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stv_text"
        />
    <TextView
        android:id="@+id/stv_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 가능한 아이디입니다."
        android:textSize="10dp"
        android:textColor="@color/red"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/stv_id"
        app:layout_constraintBottom_toTopOf="@id/set_id"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        />

    <EditText
        android:id="@+id/set_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="아이디를 입력해주세요"
        android:textColor="#7c7c7c"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/stv_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
    <TextView
        android:id="@+id/stv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="13dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/set_id"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        />

    <EditText
        android:id="@+id/set_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="비밀번호를 입력해주세요"
        android:textColor="#7c7c7c"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/stv_pwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
    <TextView
        android:id="@+id/stv_pwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_pwd"
        android:text="비밀번호 확인"
        android:textSize="13dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_goneMarginTop="29dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/set_pwd2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/stv_pwd2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="3dp"
        android:text="비밀번호를 다시 입력해주세요"
        android:textColor="#7c7c7c"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/stv_npwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다."
        android:textSize="10dp"
        android:textColor="@color/red"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/stv_pwd2"
        app:layout_constraintBottom_toTopOf="@id/set_pwd2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/stv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="13dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/set_pwd2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="18dp"
        />
    <EditText
        android:id="@+id/set_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/stv_name"
        android:text="닉네임을 입력해주세요"
        android:textColor="#7c7c7c"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/stv_dname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 중인 닉네임입니다."
        android:textSize="10dp"
        android:textColor="@color/red"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/stv_name"
        app:layout_constraintBottom_toTopOf="@id/set_name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/stv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈액형"
        android:textSize="13dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/set_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="18dp"
        />
    <Button
        android:id="@+id/type_a"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="A"
        android:textSize="30dp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stv_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="38dp"
        />
    <Button
        android:id="@+id/type_b"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="B"
        android:textSize="30dp"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/type_a"
        app:layout_constraintTop_toBottomOf="@id/stv_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="14dp"
        />
    <Button
        android:id="@+id/type_o"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="O"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/type_b"
        app:layout_constraintTop_toBottomOf="@id/stv_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="14dp"
        />
    <Button
        android:id="@+id/type_ab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="AB"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/type_o"
        app:layout_constraintTop_toBottomOf="@id/stv_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="14dp"
        />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/bg_btn_join"
        android:fontFamily="@font/notosans_regular"
        android:text="계정 생성"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:button="null"
        android:background="@drawable/checkbox"
        app:layout_constraintTop_toBottomOf="@id/type_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rh- 혈액형인 경우는 체크해주세요"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/type_a"
        app:layout_constraintLeft_toRightOf="@id/checkbox"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="11dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>