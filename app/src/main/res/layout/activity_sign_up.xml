<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stv_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stv_id"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="아이디"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_text" />

            <TextView
                android:id="@+id/stv_cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="사용 가능한 아이디입니다."
                android:textColor="@color/red"
                android:textSize="10dp"
                app:layout_constraintBottom_toTopOf="@id/set_id"
                app:layout_constraintLeft_toRightOf="@id/stv_id" />

            <EditText
                android:id="@+id/set_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:hint="아이디를 입력해주세요"
                android:textColor="#7c7c7c"
                android:textSize="12dp"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_id" />

            <TextView
                android:id="@+id/stv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="비밀번호"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/set_id" />

            <EditText
                android:id="@+id/set_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:hint="비밀번호를 입력해주세요"
                android:textColor="#7c7c7c"
                android:textSize="12dp"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_pwd" />

            <TextView
                android:id="@+id/stv_pwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="비밀번호 확인"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/set_pwd"
                app:layout_goneMarginTop="29dp" />

            <EditText
                android:id="@+id/set_pwd2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:hint="비밀번호를 다시 입력해주세요"
                android:textColor="#7c7c7c"
                android:textSize="12dp"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_pwd2" />

            <TextView
                android:id="@+id/stv_npwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="비밀번호가 일치하지 않습니다."
                android:textColor="@color/red"
                android:textSize="10dp"
                app:layout_constraintBottom_toTopOf="@id/set_pwd2"
                app:layout_constraintLeft_toRightOf="@id/stv_pwd2" />

            <TextView
                android:id="@+id/stv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="닉네임"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/set_pwd2" />

            <EditText
                android:id="@+id/set_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:hint="닉네임을 입력해주세요"
                android:textColor="#7c7c7c"
                android:textSize="12dp"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_name" />

            <TextView
                android:id="@+id/stv_dname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="사용 중인 닉네임입니다."
                android:textColor="@color/red"
                android:textSize="10dp"
                app:layout_constraintBottom_toTopOf="@id/set_name"
                app:layout_constraintLeft_toRightOf="@id/stv_name" />

            <TextView
                android:id="@+id/stv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="혈액형"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/set_name" />

            <Button
                android:id="@+id/type_a"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/type_b"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_type" />

            <Button
                android:id="@+id/type_b"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/type_o"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/type_a"
                app:layout_constraintTop_toBottomOf="@id/stv_type" />

            <Button
                android:id="@+id/type_o"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="O"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/type_ab"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/type_b"
                app:layout_constraintTop_toBottomOf="@id/stv_type" />

            <Button
                android:id="@+id/type_ab"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_btn_type"
                android:fontFamily="@font/notosans_light"
                android:includeFontPadding="false"
                android:text="AB"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/type_o"
                app:layout_constraintTop_toBottomOf="@id/stv_type" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/checkbox"
                android:button="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="Rh- 혈액형인 경우는 체크해주세요"
                android:textSize="12dp"
                app:layout_constraintLeft_toRightOf="@id/checkbox"
                app:layout_constraintTop_toBottomOf="@id/type_a" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



    <TextView
        android:id="@+id/stv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="회원가입"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_btn_join"
        android:fontFamily="@font/notosans_regular"
        android:text="계정 생성"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>