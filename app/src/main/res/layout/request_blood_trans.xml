<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="긴급 수혈 요청"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 찾기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_t"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전혈"
        app:layout_constraintTop_toBottomOf="@id/et_loc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/btn_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_loc"
        app:layout_constraintLeft_toRightOf="@id/btn_w"
        android:text="혈장"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/btn_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_p"
        app:layout_constraintTop_toBottomOf="@id/et_loc"
        android:text="혈소판"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rh+"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_w"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rh-"
        app:layout_constraintLeft_toRightOf="@id/btn_plus"
        app:layout_constraintTop_toBottomOf="@id/btn_w"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/btn_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btn_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintLeft_toRightOf="@id/btn_A"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/btn_O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintLeft_toRightOf="@id/btn_B"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/btn_AB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AB"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintLeft_toRightOf="@id/btn_O"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tv_tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글쓰기"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_A"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />
/</androidx.constraintlayout.widget.ConstraintLayout>