<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/comment_et"
        android:layout_marginBottom="60dp"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/writing_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/bwriting_tv1"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/board_change"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:src="@drawable/ic_board_edit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/writing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        tools:text="헌혈 후기예요"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/writing_textView" />
        <TextView
            android:id="@+id/writing_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            tools:text="장구벌레"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/writing_title"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/writing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10/28 16:28"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/writing_title"
            app:layout_constraintLeft_toRightOf="@id/writing_nickname"
            />
            <ImageView
                android:id="@+id/comments"
                android:layout_width="15dp"
                android:layout_height="13dp"
                app:layout_constraintTop_toBottomOf="@id/writing_title"
                app:layout_constraintEnd_toStartOf="@id/comments_counts"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_comments"
                />
            <TextView
                android:id="@+id/comments_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                tools:text="3"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@id/heart_checkbox"
                app:layout_constraintTop_toBottomOf="@id/writing_title"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                />
            <CheckBox
                android:id="@+id/heart_checkbox"
                android:layout_width="14.3dp"
                android:layout_height="13dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="5dp"
                android:button="@null"
                android:background="@drawable/custom_checkbox_heart"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                app:layout_constraintTop_toBottomOf="@id/writing_title"
                app:layout_constraintEnd_toStartOf="@id/heart_counts"
                />
        <TextView
            android:id="@+id/heart_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            tools:text="1412"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/writing_title"
            />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/writing_nickname"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/writing_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:text="안녕하세요, 얼마 전 Rh- O형의 헌혈이 시급하다는 소식을 듣고 Rh- 혈액은 워낙 구하기가 힘들다는 걸 알기에 지정 헌혈에 참여했습니다. 이번에는 헌혈자이지만 미래에 제가 혈액이 필요한 요청자가 될 수 있다는 걸 희귀 혈액형인 저는 너무나도 잘 압니다. 빠른 시일 내에 회복하시길 바라요. Rh- 환자분들 다들 힘내세요!"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="12dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/writing_body"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:fontFamily="@font/notosans_light"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp" />
    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/txt_comment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_comments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingHorizontal="0dp"
        android:paddingBottom="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_comments" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <EditText
        android:id="@+id/comment_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/comment_bt"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:hint="댓글을 입력하세요"
        android:textSize="11sp"
        android:fontFamily="@font/notosans_light"
        android:textColor="@color/warm_grey_2"
        android:background="@drawable/bg_record" />
    <Button
        android:id="@+id/comment_bt"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/comment_et"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="15dp"
        android:hint="등록"
        android:includeFontPadding="false"
        android:textSize="11sp"
        android:fontFamily="@font/notosans_light"
        android:textColor="@color/warm_grey_2"
        android:background="@drawable/bg_record"
        />

</androidx.constraintlayout.widget.ConstraintLayout>